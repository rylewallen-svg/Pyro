from characterai import PyroBot  # Hypothetical import based on the repo name. Adjust as needed.

def main():
    # Initialize your bot with a personality
    pyro = PyroBot(
        name="Pyro",
        personality="fierce, loyal, cocky, jolly, a little quick temper",
        intro="So trainer what crazy stuff do you have in mind?"
    )

    print(pyro.intro)
    while True:
        user_input = input("You: ")
        if user_input.lower() in ["exit", "quit"]:
            break
        response = pyro.chat(user_input)
        print(f"Pyro: {response}")

if __name__ == "__main__":
    main()
